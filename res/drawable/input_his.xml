<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- 定义了描边的颜色 -->
    <stroke
        android:width="1dp"
        android:color="@color/grey" />
    <solid   android:color="@color/white" />
    <!-- 定义弧形角度 -->
    <corners android:radius="4dip" />
    <!-- 定义文字与边界的距离 -->
    <padding
        android:bottom="4dp"
        android:left="6dp"
        android:right="6dp"
        android:top="4dp" />

</shape>