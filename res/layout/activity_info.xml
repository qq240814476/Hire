        android:src="@drawable/isloading" />

    <TextView
        android:id="@+id/info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
	<TextView 
	    android:id="@+id/info_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>
